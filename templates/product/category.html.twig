{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{ slug }}

{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('product_category', {'slug': category.slug}) }}">{{ category.name }}</a>
		</li>
	</ol>
	<h1>Catégorie :
		{{ category.name }}</h1>

	<div class="row">
		{% for p in category.products %}
			<div class="col-4 mx-auto">
				<div
					class="card border-info m-3">
					{# <div class="card-header text-white bg-info">{{category.name}}</div> #}
					<img src="{{ p.picture }}" alt="Image du produit" class="card-img-top">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}</h4>
						<p class="card-text">{{p.shortDescription}}
							({{p.price}}
							&euro;)</p>
					</div>
					<div class="mx-auto p-2">
						<a class="btn btn-primary btn-sm mx-1" href="{{ path('product_show', {'category_slug': category.slug, 'slug': p.slug}) }}">Détails</a>
						<a class="btn btn-success btn-sm mx-1" href="#">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>


{% endblock %}
