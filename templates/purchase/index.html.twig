{% extends "base.html.twig" %}


{% block title %}
	Mes commandes
{% endblock %}


{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Num√©ro</th>
				<th>Adresse</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<th>{{ p.id }}</th>
					<th>{{ p.address }}<br>{{ p.postalCode }},
						{{ p.city }}</th>
					<th>{{ p.purchasedAt.format('d/m/Y H:i') }}</th>
					<th>
						<ul>
							{% for item in p.purchaseItems %}
								<li>{{ item.quantity }}
									x
									{{ item.productName }}
									({{ item.total }}&euro;)
								</li>
							{% endfor %}
						</ul>

					</th>
					<th>{{ p.total }}
						&euro;</th>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
